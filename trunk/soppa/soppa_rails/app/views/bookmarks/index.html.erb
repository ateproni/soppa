<h1>Listing bookmarks</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Nome</th>
  </tr>

<% @bookmark_items.each do |item| %>
  <tr>
    <td></td>
    <td><%= item.bookmark.user.login   %></td>
    <td><%= item.recipe.name   %></td>
    <td><%= link_to 'Show', recipe_path(item.recipe) %></td>
    <td><%= link_to 'Destroy', recipe_path(item.recipe), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New bookmark', new_bookmark_path %>