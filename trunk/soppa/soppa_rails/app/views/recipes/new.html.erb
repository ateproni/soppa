<h1>New recipe</h1>

<% form_for(@recipe) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :prepaire_mode %><br />
    <%= f.text_area :prepaire_mode %>
  </p>
  <p>
    <%= f.label :rendiment %><br />
    <%= f.text_field :rendiment %>
  </p>
  <p>
    <%= f.label :prepaire_time %><br />
    <%= f.datetime_select :prepaire_time, :prompt => {:hour => "horas", :minute => "minutos"}, :order => [:hour, :minute] %>
  </p>
  <p>
    <%= f.label :score %><br />
    <%= f.text_field :score %>
  </p>
  <p>
    <%= f.label "Tipo de receita" %><br />
    <%= select_tag "recipe[recipe_type_id]", options_from_collection_for_select(RecipeType.find(:all), 'id','name') %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', recipes_path %>