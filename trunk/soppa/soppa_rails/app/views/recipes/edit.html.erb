<h1>Editing recipe</h1>

<% form_for(@recipe) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :prepaire_mode %><br />
    <%= f.text_area :prepaire_mode %>
  </p>
  <p>
    <%= f.label :rendiment %><br />
    <%= f.text_field :rendiment %>
  </p>
  <p>
    <%= f.label :prepaire_time %><br />
    <%= f.datetime_select :prepaire_time %>
  </p>
  <p>
    <%= f.label :score %><br />
    <%= f.text_field :score %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @recipe %> |
<%= link_to 'Back', recipes_path %>