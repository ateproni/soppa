<h1>Listing recipes</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Prepare mode</th>
    <th>Rendiment</th>
    <th>Prepare time</th>
    <th>Score</th>
  </tr>

<% @recipes.each do |recipe| %>
  <tr>
    <td><%=h recipe.name %></td>
    <td><%=h recipe.description %></td>
    <td><%=h recipe.prepare_mode %></td>
    <td><%=h recipe.rendiment %></td>
    <td><%=h recipe.prepare_time %></td>
    <td><%=h recipe.score %></td>
    <td><%= link_to 'Show', recipe %></td>
    <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
    <td><%= link_to 'Destroy', recipe, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New recipe', new_recipe_path %>