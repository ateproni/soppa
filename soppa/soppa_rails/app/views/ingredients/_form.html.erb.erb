<% form_for(@ingredient) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label "Tipo" %><br />
    <%= select_tag "ingredient[ingredient_type_id]", options_from_collection_for_select(IngredientType.find(:all), 'id','name', @ingredient.ingredient_type.id) %>
  </p>
  <p>
    <%= f.submit 'Save' %>
  </p>
<% end %>